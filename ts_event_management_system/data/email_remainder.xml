<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ts_event_remainder_id" model="mail.template">
        <field name="name">Event Reminder</field>
        <field name="subject">Registration Confirmed</field>
        <field
            name="email_from"
        >{{object.env['res.partner'].browse(9).user_id.partner_id.email}}</field>
        <field name="email_to">{{object.email}}</field>
        <field
            name="model_id"
            ref="ts_event_management_system.model_ts_participant_details"
        />
        <field name="auto_delete" eval="True" />
        <field name="lang">${object.lang}</field>
        <field name="body_html" type="html">
            <table
                border="0"
                cellpadding="0"
                cellspacing="0"
                style="background-color: #F1F1F1; font-family: Verdana, Arial, sans-serif; color: #454748; width: 100%; border-collapse: separate;"
            >
                <tr>
                    <td align="center">
                        <table
                            border="0"
                            cellpadding="0"
                            cellspacing="0"
                            width="590"
                            style="background-color: white; color: #454748; border-collapse: separate;"
                        >
                            <tbody>
                                <!-- HEADER -->
                                <tr>
                                    <td align="center" style="min-width: 590px;">
                                        <table
                                            border="0"
                                            cellpadding="0"
                                            cellspacing="0"
                                            width="590"
                                            style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse: separate;"
                                        >
                                            <tr>
                                                <td valign="middle">
                                                    <br />
                                                    <span
                                                        style="font-size: 20px; font-weight: bold;"
                                                    >
                                                        <t
                                                            t-out="object.event_registration_id.name"
                                                        />
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    colspan="2"
                                                    style="text-align:center;"
                                                >
                                                    <hr
                                                        width="100%"
                                                        style="background-color: rgb(204, 204, 204); border: medium none; clear: both; display: block; font-size: 0px; min-height: 1px; line-height: 0; margin: 16px 0px 16px 0px;"
                                                    />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <!-- CONTENT -->
                                <tr>
                                    <td align="center" style="min-width: 590px;">
                                        <table
                                            border="0"
                                            cellpadding="0"
                                            cellspacing="0"
                                            width="590"
                                            style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse: separate;"
                                        >
                                            <tr>
                                                <td
                                                    valign="top"
                                                    style="font-size: 13px;"
                                                >
                                                    <div>
                                                        Dear
                                                        <t t-out="object.name" />
                                                        <br />
                                                        <br />
                                                        This is your event registration confirmation for the event <span
                                                            t-field="object.event_registration_id.name"
                                                        />, scheduled from <span
                                                            t-field="object.event_registration_id.date_begin"
                                                        />
                                                        to <span
                                                            t-field="object.event_registration_id.date_end"
                                                        />.
                                                        This is a computer generated mail, Please do not reply
                                                        <br />
                                                        <br />
                                                        <br />
                                                        - Name:
                                                        <t t-out="object.name" />
                                                        <br />
                                                        - Institution:
                                                        <t t-out="object.institution" />
                                                        <br />
                                                        - Phone:
                                                        <t t-out="object.phone" />
                                                        <br />
                                                        - Email:
                                                        <t t-out="object.email" />
                                                        <br />
                                                        - Address:
                                                        <t t-out="object.address" />
                                                        <br />
                                                        - District:
                                                        <t t-out="object.district" />
                                                        <br />
                                                        - State:
                                                        <t t-out="object.state.name" />
                                                        <br />
                                                        - Country:
                                                        <t
                                                            t-out="object.country.name"
                                                        />
                                                        <br />
                                                        <br />
                                                        <br />
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:center;">
                                                    <hr
                                                        width="100%"
                                                        style="background-color: rgb(204, 204, 204); border: medium none; clear: both; display: block; font-size: 0px; min-height: 1px; line-height: 0; margin: 16px 0px 16px 0px;"
                                                    />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <!-- FOOTER -->
                                <tr>
                                    <td align="center" style="min-width: 590px;">
                                        <table
                                            border="0"
                                            cellpadding="0"
                                            cellspacing="0"
                                            width="590"
                                            style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse: separate;"
                                        >
                                            <tr>
                                                <td>
                                                    <p>Here's is your pass for <span
                                                            t-field="object.event_registration_id.name"
                                                        /></p><br>
                                                </br>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>

                                                <img
                                                        t-attf-src="data:image/png;base64,{{object.qr_code_report}}"
                                                        t-att-filename="'EventPass.png'"
                                                    />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
        </field>
    </record>
</odoo>
