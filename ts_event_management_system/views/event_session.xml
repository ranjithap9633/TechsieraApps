<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_ts_event_session_tree" model="ir.ui.view">
        <field name="name">ts.event.session.tree</field>
        <field name="model">ts.event.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="event_name_id" />
                <field name="agenda" />
                <field name="start" />
                <field name="end" />
                <field name="attendance" />
                <button name="info" string="i" type="object" class="btn-info" />
                <button
                    name="mark_session_attendance"
                    string="Mark Attendance"
                    type="object"
                    class="btn-primary"
                />

            </tree>
        </field>
    </record>
    <record id="action_event_session" model="ir.actions.act_window">
        <field name="name">Event Sessions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ts.event.session</field>
        <field name="view_mode">tree</field>

    </record>
    <menuitem
        id="menu_event_session"
        name="Event Sessions"
        parent="menu_event_management_root"
        action="action_event_session"
        sequence="13"
    />

</odoo>
